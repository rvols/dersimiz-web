NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://dersimiz:password@localhost:5432/dersimiz

# Redis (required per architecture: session and API caching)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=30d
ADMIN_JWT_SECRET=admin-jwt-secret-change-in-production
ADMIN_JWT_EXPIRY=8h

# SMS (Vatan SMS â€“ OTP)
# If set, real OTP is sent via https://api.vatansms.net/api/v1/otp
# If not set, request-otp uses demo code 123456 (no SMS sent).
VATAN_SMS_API_ID=
VATAN_SMS_API_KEY=
VATAN_SMS_SENDER=
# Optional: message_type = normal | turkce (default: normal)
# VATAN_SMS_MESSAGE_TYPE=normal
# Optional: template; {code} is replaced with the OTP (default: "OTP kodunuz: {code}")
# VATAN_SMS_MESSAGE_TEMPLATE=OTP kodunuz: {code}

# AI moderation (Gemini 2.5 Flash). If unset, text messages are approved without moderation.
GEMINI_API_KEY=

# Optional: uploads
# UPLOAD_DIR=./uploads
